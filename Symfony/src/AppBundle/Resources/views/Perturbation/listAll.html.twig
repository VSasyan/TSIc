{% extends 'AppBundle::base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block titleblock %}	
	<h1>{{ title }}</h1>
{% endblock %}

{% block body %}

	<div>
		{% if perturbations|length > 1 %}
			<h2>{{ perturbations|length }} perturbations trouvées</h2>
		{% else %}
			<h2>{{ perturbations|length }} perturbation trouvée</h2>
		{% endif %}
		<div class="elements">
			{% for p in perturbations %}
				<div
					class="element"
					data-center="{{ p.center }}"
					data-type="{{ p.type.name }}"
					data-geoJSON="{{ p.geoJSON }}">
					<a href="{{ path('perturbation_show', {id : p.id}) }}">{{ p.name }}</a>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}