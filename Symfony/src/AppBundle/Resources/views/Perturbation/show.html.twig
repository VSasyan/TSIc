{% extends 'AppBundle::base.html.twig' %}

{% block title %}
	Détails de la perturbation
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

    <div class="parent">
	<div id="map" class="child"></div>
	<div class="child" data-id="{{ perturbation.id }}" data-date="{{ perturbation.creationDate|date('Y-m-d') }}">

	    <p>Perturbation créée le {{ perturbation.creationDate|date('Y-m-d') }}.
		{% if perturbation.valid %}
		    <span class="perturbation-valid-tag">Validée</span>
		{% endif %}
	    </p>

	    {% for f in perturbation.formulations %}
		<div class="element" data-name="{{ f.name }}" data-center="{{ f.center }}" >

		    <h1><span class="perturbation-name">{{ f.name }}</span> :
			<span class="perturbation-type" title="type">type de perturbation</span></h1>
		    <p class="perturbation-dates">Depuis {{ f.beginDate|date('Y-m-d') }} ; fin estimée à {{ f.endDate|date('Y-m-d') }}</p>
		</div>
	    {% endfor %}
	</div>
    </div>

{% endblock %}
