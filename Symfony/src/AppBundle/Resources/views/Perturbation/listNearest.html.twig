<div id="list" class="elements">
	{% for p in perturbations %}
		<div class="element" data-id="{{ p.id }}" data-name="{{ p.name }}" data-center="{{ p.center }}">
			<a href="{{ path("perturbation_show", { id: p.id }) }}">
				<span class="name">{{ p.name }}</span>
				<span class="button inhibate float-right"  data-path="{{ path("vote", { id_perturbation: p.id, id_message: 1}) }}" title="Annuler la perturbation"><i class="fa fa-ban"></i></span>
				<span class="button terminate float-right" data-path="{{ path("vote", { id_perturbation: p.id, id_message: 2}) }}" title="La perturbation est terminÃ©e."><i class="fa fa-hourglass-end"></i></span>
				<span class="button validate float-right"  data-path="{{ path("vote", { id_perturbation: p.id, id_message: 3}) }}" title="Confirmer la perturbation"><i class="fa fa-check-circle-o"></i></span>
				<div class="clear"></div>
			</a>
		</div>
	{% endfor %}
</div>

