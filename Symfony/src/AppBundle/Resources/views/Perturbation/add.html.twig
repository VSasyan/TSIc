{% extends 'AppBundle::base.html.twig' %}

{% block title %}
	Ajouter une perturbation
{% endblock %}

{% block stylesheets %}
		<link href="{{ asset('less/addPerturbation.less') }}" rel="stylesheet/less" type="text/css" />
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/init_add_perturbation.js') }}"></script>
{% endblock %}

{% block body %}

	<div>
		<h2>Ajouter une perturbation</h2>
		{{ form_start(form) }}
			<div>
			{{ form_errors(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.type) }}
			{{ form_row(form.description) }}
			</div>
			<div>
				<div>
					<label class="required" for="formulation_center">Position</label>
					<div id="map" class="float right"></div>
					{{ form_row(form.center) }}
				</div>
			</div>
			{{ form_widget(form) }}
		{{ form_end(form) }}
	</div>

{% endblock %}
