<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{% block title %}ArtisanExpert{% endblock %}</title>
		<link rel="icon" type="image/png" href="{{ asset('favicon.png') }}">
		<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css' />
		<link href='https://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css' />
		<link href="{{ asset('bundles/Search/fa/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ asset('bundles/Search/less/main.less') }}" rel="stylesheet/less" type="text/css" />
		<link href="{{ asset('bundles/Search/less/mobile.less') }}" rel="stylesheet/less" type="text/css" />
		<link href="{{ asset('bundles/Search/less/typeStyle.less') }}" rel="stylesheet/less" type="text/css" />
		<link href="{{ asset('bundles/Search/less/tableStyle.less') }}" rel="stylesheet/less" type="text/css" />
		<link href="{{ asset('bundles/Search/less/formStyle.less') }}" rel="stylesheet/less" type="text/css" />
		{% block stylesheets %}{% endblock %}

	    <script src="{{ asset('bundles/Search/js/jquery.min.js') }}"></script>
	    <script src="{{ asset('bundles/Search/js/init.js') }}"></script>
	    <script src="{{ asset('bundles/Search/js/autosize.js') }}"></script>
	    <script src="//cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>
		{% block javascripts %}{% endblock %}
	</head>

	<body>
		<div id="header">
			<div>
				<h1><a href="{{ asset('') }}"><img src="{{ asset('bundles/Search/images/logo.png') }}" title="ArtisanExpert.com"/></a></h1>
				<nav class="help">
					<span><a href="#">Contactez-nous</a></span>
					<span class="dr">|</span>
					<span><a href="#">Besoin d'aide ?</a></span>
					<span class="dr">|</span>
					<span><a href="#">English</a></span>
				</nav>

				<nav class="main">
					<label for="show-menu" class="show-menu"><span id="hamburger"></span></label>
					<input type="checkbox" id="show-menu" role="button" />

					{% set currentPath = app.request.attributes.get('_route') %}

					<ul>
						<li class="{% if currentPath == 'offres' %}current{% endif %}"><a href="{{ path('offres') }}">Notre offre</a></li>
						<li class="{% if currentPath == 'blog' %}current{% endif %}"><a href="{{ path('blog') }}">Le Blog</a></li>
							
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
						
							<li class="parent {% if currentPath == 'user_afficher' %}current{% endif %}">
								<a href="{{ path('mon_compte') }}">{{ app.user.username }}</a>
								<ul class="menu_level_1">
									<li><a href="{{ path('mon_compte') }}">Mon compte</a></li>
									<li><a href="{{ path('fos_user_security_logout') }}">{{ 'Logout'|trans({}, 'FOSUserBundle') }}</a></li>
								</ul>
							</li>

						{% else %}

							<li class="{% if currentPath == 'fos_user_security_login' %}current{% endif %}"><a href="{{ path('fos_user_security_login') }}">{{ 'Connexion'|trans({}, 'FOSUserBundle') }}</a></li>
							<li class="{% if currentPath == 'devenez_partenaire' %}current{% endif %}"><a href="{{ path('devenez_partenaire') }}">Devenez Partenaire</a></li>

						{% endif %}

					</ul>
				</nav>
			</div>
		</div>

		{% for type, messages in app.session.flashBag.all %}
			{% for message in messages %}
				<div class="{{ type }}">
					{{ message|trans({}, 'FOSUserBundle') }}
				</div>
			{% endfor %}
		{% endfor %}

		{% block body %}{% endblock %}

