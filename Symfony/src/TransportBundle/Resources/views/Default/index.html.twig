{% extends 'AppBundle::base.html.twig' %}

{% block title %}
	Ajout d'un objet
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
	<!-- Wicket JS library: see https://github.com/arthur-e/Wicket -->
	<script src="{{ asset('js/wicket.js') }}"></script>
	<script src="{{ asset('js/wicket-leaflet.js') }}"></script>

	<script src="{{ asset('js/init_geoloc.js') }}"></script>
	<script src="{{ asset('js/init_ajax.js') }}"></script>
	<script src="{{ asset('js/add_object.js') }}"></script>
{% endblock %}

{% block titleblock %}
	<h1>Ajout d'un objet</h1>
{% endblock %}

{% block body %}

	<div class="parent">
		<div class="child border-form">
			<label for="transport_class">Sélectionnez le type d'objet à ajouter :</label>
			<select id="transport_class" name="transport_class">
				<option value="RoadNode">Nœud routier</option>
				<option value="RoadLink" selected="selected">Lien routier</option>
			</select>
			<div id="ajax_loader" data-function="none"></div>
		</div>

		<div class="child">
			<div id="map"></div>
		</div>

	</div>

{% endblock %}
